<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/show_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image_left"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/left_image_view"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/profile_image_left"
        android:layout_marginLeft="6dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen"
        android:layout_below="@id/show_text_message"/>

</RelativeLayout>